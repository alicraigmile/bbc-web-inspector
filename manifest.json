{
    "name": "BBC Web Inspector",
    "version": "1.0",
    "description": "Inspect a BBC web page",
    "devtools_page": "devtools.html",
    "icons": {
        "16": "detective16.png",
        "32": "detective32.png",
        "48": "detective48.png",
        "128": "detective128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["tabs"],
    "host_permissions": [ 
        "http://*.bbc.com/*",
        "https://*.bbc.co.uk/*"
    ],
    "manifest_version": 3
}
